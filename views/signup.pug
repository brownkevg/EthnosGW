extends layout

block content
	include nav



	#createAccount.container
		.col-sm-6.col-sm-offset-3
			.headerTitle Create Account
			form#createAccountForm(action='/signup' method='post')
				.form-group
					input.form-control(type="text" placeholder="First Name" name="firstName")
				.form-group
					input.form-control(type="text" placeholder="Last Name" name="lastName")
				.form-group
					input.form-control(type="text" placeholder="Email" name="email")
				.form-group
					input.form-control(type="password" placeholder="Password" name="password")
				input.btn.btn-success.createUserSubmit(type="submit")
			p Already have an account? <a href="/login">Login</a>

	include footer